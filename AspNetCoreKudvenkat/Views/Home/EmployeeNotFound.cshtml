@model int
@{
    ViewBag.Title="Employee Not Found";
}

<div class="alert alert-danger mt-1 mb-1">
    <h3>404 Not Found!</h3>
    <hr/>
    <h5>Employee with ID: @Model cannot be found</h5>
</div>
<div class="form-group row float-right mr-1">
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary" style="width: auto;">
    Click here to see the list of all employees
    </a>
</div>
