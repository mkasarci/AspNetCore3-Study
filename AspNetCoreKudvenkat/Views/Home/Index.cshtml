@model IEnumerable<Employee>;
@{
    ViewBag.Title = "Employee List";
}

<table>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Department</th>
    </tr>
    @foreach (var employee in Model)
    {
        <tr>
            <td>@employee.Id</td>
            <td>@employee.Name</td>
            <td>@employee.Department</td>
        </tr>
    }
</table>