@model EditRoleViewModel

@{
    ViewBag.Title = "Edit Role";
}

<h1>Edit Role</h1>

<form asp-action= "EditRole" asp-controller= "Administration" method = "post" class="mt-3">
    <div class="form-group row mt-2">
        <label asp-for="Id"></label>
        <input asp-for="Id"  disabled class="form-control" />
    </div>
    <div class="form-group row mt-2">
        <label asp-for="RoleName"></label>
        <input asp-for="RoleName" class="form-control" />
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>
    <div class="form-group row mt-2">
        <button asp-action="EditRole" asp-controller= "Administration" type="submit"
         class="btn btn-primary mr-1">Update</button>
         <a asp-action="ListRoles" asp-controller="Administration" class="btn btn-danger">Cancel</a>
    </div>
    <div class="card mt-2">
        <div class="card-header">
            Users in this role
        </div>
        @if (@Model.Users.Any())
        {
             foreach (var user in @Model.Users)
            {
                <div class="card-body">
                    <h5 class="card-title">@user</h5>
                </div>
            }
            
        }
        else
        {
           <div class="card-body">
                None at the moment.
            </div>
        }
    </div>
    <div class="card-footer">
        <a class="btn btn-outline-primary" style="width: auto;"
         asp-action="EditUsersInRole" asp-controller="Administration"
         asp-route-id="@Model.Id">Add or remove users</a>
    </div>
</form>