@model List<UserRolesViewModel>
@{
    ViewBag.Title = "Manage Roles";
    var userId = ViewBag.userId;
}

<form method="post">
    <div class="card">
        <div class="card-header">
            Manage User Roles
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label asp-for="@Model[i].IsSelected" class="form-check-label" >
                        @Model[i].RoleName
                    </label>
                </div>
                <div>
                    <input type="hidden" asp-for="@Model[i].RoleName"/>
                    <input type="hidden" asp-for="@Model[i].RoleId"/>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" class="btn btn-primary mr-1" style="width: auto;"
            value="Update">
            <a class="btn btn-danger" style="width: auto;"asp-action="EditUser" 
                asp-controller="Administration" asp-route-id="@userId">Cancel</a>
        </div>
    </div>
</form>


